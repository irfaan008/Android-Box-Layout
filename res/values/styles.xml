<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="rlTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:background">@drawable/glossy_box_title</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="rlBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/glossy_box</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="rlRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:orientation">horizontal</item>
        
    </style>

    <style name="devider">
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="devider_v">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">#FF0000</item>
        <item name="android:layout_width">2dip</item>
    </style>

    <style name="tvBodyLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFCC00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvBodyRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>